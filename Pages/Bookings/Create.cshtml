@page
@model ZamkDb.Pages.Bookings.CreateModel
@using Microsoft.AspNet.Identity
@using ZamkDb.Models
@using ZamkDb.Pages.Courses
@{
	var id = User.Identity.GetUserId();
	Model.Booking.ParticipantId = id;

	var date = DateTime.Now;
	Model.Booking.Date = date;
}

<form method="post">
    <h3>Insert values</h3>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label hidden="hidden" asp-for="Booking.CourseId"></label>
        <input hidden="hidden" asp-for="@Model.Booking.CourseId" class="form-control" />
        <span asp-validation-for="Booking.CourseId" class="text-danger"></span>
    </div>

	<div class="form-group">
		<label hidden="hidden" asp-for="Booking.ParticipantId"></label>
		<input hidden="hidden" asp-for="@Model.Booking.ParticipantId" class="form-control" />
		<span asp-validation-for="@Model.Booking.ParticipantId" class="text-danger"></span>
	</div>
    
	<div class="form-group">
		<label  asp-for="Course.StartDateTime"></label>
		<input  asp-for="@Model.Course.StartDateTime" class="form-control" readonly="readonly"/>
		<span asp-validation-for="@Model.Course.StartDateTime" class="text-danger"></span>
	</div>

	<div class="form-group" input readonly>
        <label asp-for="Course.ZealandLocation"></label>
        <input asp-for="@Model.Course.ZealandLocation" class="form-control" readonly="readonly" />
        <span asp-validation-for="@Model.Course.ZealandLocation" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Course.StartLocation"></label>
        <input asp-for="@Model.Course.StartLocation" class="form-control" readonly="readonly" />
        <span asp-validation-for="@Model.Course.StartLocation" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Course.EndLocation"></label>
        <input asp-for="@Model.Course.EndLocation" class="form-control"  readonly="readonly"/>
        <span asp-validation-for="@Model.Course.EndLocation" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Course.PickUpPoint1"></label>
        <input asp-for="@Model.Course.PickUpPoint1" class="form-control" readonly="readonly" />
        <span asp-validation-for="@Model.Course.PickUpPoint1" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Course.PickUpPoint2"></label>
        <input asp-for="@Model.Course.PickUpPoint2" class="form-control" readonly="readonly" />
        <span asp-validation-for="@Model.Course.PickUpPoint2" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Course.PickUpPoint3"></label>
        <input asp-for="@Model.Course.PickUpPoint3" class="form-control" readonly="readonly" />
        <span asp-validation-for="@Model.Course.PickUpPoint3" class="text-danger"></span>
    </div>

  
    <label for="PickUpPoints">Choose a Pick up Point:</label>
    <select id="cars" name="cars">
        <option value="@Model.Course.PickUpPoint1">@Model.Course.PickUpPoint1</option>
        <option value="@Model.Course.PickUpPoint2">@Model.Course.PickUpPoint2</option>
        <option value="@Model.Course.PickUpPoint3">@Model.Course.PickUpPoint3</option>
    </select>
       


   

    
    <a class="btn btn-dark" asp-page="/Bookings/BookingConfirm" asp-route-tid="@Model.Course.CourseId"> Book this course </a>
   
</form>
