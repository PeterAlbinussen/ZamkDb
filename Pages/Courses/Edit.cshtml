@page
@model ZamkDb.Pages.Courses.EditModel
@{
    ViewData["Title"] = "Edit";
}
<h1>Edit</h1>

<form method="post">
    <h3>Please Edit your information here.</h3>
    <div asp-validation-summary="  ModelOnly  " class="text-danger"></div>
    <input type="hidden" asp-for="@Model.Course.CourseId" />
    <div class="form-group">
        <label asp-for="@Model.Course.ZealandLocation" class="control-label"></label>
        <input asp-for="@Model.Course.ZealandLocation" class="form-control" placeholder="Zealand Location" />
        <span asp-validation-for="@Model.Course.ZealandLocation" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Course.StartLocation" class="control-label"></label>
        <input asp-for="@Model.Course.StartLocation" class="form-control" placeholder="StartPoint" />
        <span asp-validation-for="@Model.Course.StartLocation" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Course.EndLocation" class="control-label"></label>
        <input asp-for="@Model.Course.EndLocation" class="form-control" placeholder="EndPoint" />
        <span asp-validation-for="@Model.Course.EndLocation" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Course.PickUpPoint1" class="control-label"></label>
        <input asp-for="@Model.Course.PickUpPoint1" class="form-control" placeholder="PickUpPoint1" />
        <span asp-validation-for="@Model.Course.PickUpPoint1" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Course.PickUpPoint2" class="control-label"></label>
        <input asp-for="@Model.Course.PickUpPoint2" class="form-control" placeholder="PickUpPoint2" />
        <span asp-validation-for="@Model.Course.PickUpPoint2" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Course.PickUpPoint3" class="control-label"></label>
        <input asp-for="@Model.Course.PickUpPoint3" class="form-control" placeholder="PickUpPoint3" />
        <span asp-validation-for="@Model.Course.PickUpPoint3" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="@Model.Course.StartDateTime" class="control-label"></label>
        <input asp-for="@Model.Course.StartDateTime" class="form-control" />
        <span asp-validation-for="@Model.Course.StartDateTime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Course.EndDateTime" class="control-label"></label>
        <input asp-for="@Model.Course.EndDateTime" class="form-control" />
        <span asp-validation-for="@Model.Course.EndDateTime" class="text-danger"></span>
    </div>





    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-dark">Update</button>
            <a asp-page="/Courses/GetAllCourses" class="btn btn-danger">Cancel</a>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Course.UserId"></label><input asp-for="@Model.Course.UserId" class="form-control" readonly="readonly" />
        <span asp-validation-for="@Model.Course.UserId" class="text-danger"></span>
    </div>

</form>